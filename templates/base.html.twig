<!DOCTYPE html>
<html lang="fr">
	<head>
		<title>
			{% block title %}Symfony eCommerce
			{% endblock %}
		</title>

		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('assets/css/w3.css') }}">
			<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
			<style>
				body {
					font-family: "Lato", sans-serif
				}
				.mySlides {
					display: none
				}
			</style>
		{% endblock %}
	</head>

	<body>
		{% include 'layout/header.html.twig' %}

		<!-- Page content -->
		<div
			class="w3-content" style="max-width:2000px;margin-top:46px">

			{# Un Flashbag est un message supprimé après affichage. Notre boucle ici, chargée à chaque utilisation de base.html.twig et placée avant le bloc twig body, permet d'afficher le message en évidence. #}
			{% if app.session.get('infopanel') is defined and app.session.get('infopanel') == true %}
				<div class="w3-panel w3-pale-{{ app.session.get('status') }}" style="max-width:800px; margin:auto">
					<h3>{{ app.session.get('message_title') }}</h3>
					<p>
						{% for message in app.session.flashbag.get('info') %}
							{{ message }}<br>
						{% endfor %}
					</p>
				</div>
				{{ app.session.set('infopanel', false) }}
			{% endif %}

			{% block body %}{% endblock %}

			{% include 'layout/contact.html.twig' %}

			<!-- End Page Content -->
		</div>

		{% include 'layout/footer.html.twig' %}

		{% block javascripts %}
			<script>
				// Used to toggle the menu on small screens when clicking on the menu button
function myFunction() {
var x = document.getElementById("navDemo");
if (x.className.indexOf("w3-show") == -1) {
x.className += " w3-show";
} else {
x.className = x.className.replace(" w3-show", "");
}
}

// When the user clicks anywhere outside of the modal, close it
var modal = document.getElementById('ticketModal');
window.onclick = function (event) {
if (event.target == modal) {
modal.style.display = "none";
}
}
			</script>
		{% endblock %}
	</body>
</html>
